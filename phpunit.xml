         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="Test/bootstrap.php"
        >
    <testsuites>
        <testsuite name="">
            <directory>./Test/BlueImp/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./BlueImp/</directory>
            <directory>./FileUpload/</directory>
            <directory>./Services/</directory>
        </whitelist>
    </filter>
</phpunit>